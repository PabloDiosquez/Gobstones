program{
    ConstruirParedDeLadrillos()
}


procedure ConstruirParedDeLadrillos(){
    /*
        Proposito: Construye una pared de ladrillos de ocho ladrillos de alto y cuantro de ancho
        Precondiciones:
            - La posición inicial debe estar sobre el borde inferior o sobre una pared de ladrillos
            - Deben exitir al menos 3 celdas al Este y 3 celdas al Norte.
            - Todas las posiciones de la pared deben estar vacías.
        Observaciones: una fila de ladrillos tiene 2 hileras(inferior y superior)
    */
    ConstruirFilaDeLadrillos()
    IrALaSiguienteFilaDeLadrillos()
    ConstruirFilaDeLadrillos()
    IrALaSiguienteFilaDeLadrillos()
    ConstruirFilaDeLadrillos()
    IrALaSiguienteFilaDeLadrillos()
    ConstruirFilaDeLadrillos()
    IrAlInicioDeLaPared()
}


procedure IrALaSiguienteFilaDeLadrillos(){
    /*
        Proposito: Ir a la siguiente fila vacia de ladrillos.
        Precondiciones: debe existir al menos  una celda al Norte de la posicion actual.
    */
    Mover(Norte)
}

procedure ConstruirFilaDeLadrillos(){
    /*
        Proposito: Construye una fila de ladrillos de ancho 4 a partir de la celda actual al Este.
        Precondiciones:
            - Deben exitir al menos 3 celdas lindantes al Este y deben estar vacías.
        Observaciones: una fila de ladrillos tiene 2 hileras(inferior y superior)
    */
    
    PonerFilaDeCemento()
    PonerHileraInferiorDeLadrillos()
    PonerFilaDeCemento()
    PonerHileraSuperiorDeLadrillos()
}

procedure PonerFilaDeCemento(){
    /*
        Proposito: Pone una fila de cemento desde la celda actual de ancho 4
        Precondiciones:
        - o bien la fila a construir está vacía,
        - o bien la fila a construir tiene un ladrillo entero en la parte inferior, sin cemento sobre él.
    */
    
    PonerCemento()
    Mover(Este)
    PonerCemento()
    Mover(Este)
    PonerCemento()
    Mover(Este)
    PonerCemento()
    Mover3AlOeste()

    
}


procedure PonerHileraInferiorDeLadrillos(){
    /*
        Proposito: Pone la fila inferior de ladrillo
        Precondiciones:
        - no hay ladrillos en la fila actual y hay cemento.
    */
    
    PonerLadrillo()
    Mover(Este)
    PonerLadrillo()
    Mover(Este)
    PonerLadrillo()
    Mover(Este)
    PonerLadrillo()
    Mover3AlOeste()

}


procedure PonerHileraSuperiorDeLadrillos(){
    /*
        Proposito: Pone la fila superior de ladrillo
        Precondiciones:
        - Hay una fila de ladrillos en la fila actual con cemento en ella
    */

    PonerMedioLadrilloEnElBordeOeste()
    Mover(Este)
    PonerLadrillo()
    Mover(Este)
    PonerLadrillo()
    Mover(Este)
    PonerLadrillo()
    PonerMedioLadrilloEnElBordeEste()
    Mover3AlOeste()

}


procedure Mover3AlOeste(){
    Mover(Oeste)
    Mover(Oeste)
    Mover(Oeste)
}

procedure IrAlInicioDeLaPared(){
    Mover(Sur)
    Mover(Sur)
    Mover(Sur)
    
    
}